<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="3dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/everyday_custom_style2"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/everytext1"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:text=""
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/kalpurush"
                android:textStyle="normal"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:background="@drawable/everyday_custom_style"
                />
            <TextView
                android:id="@+id/everytext2"
                android:layout_toRightOf="@id/everytext1"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="17sp"
                android:textColor="@color/black"
                android:fontFamily="@font/kalpurush"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:maxLines="2"
                android:ellipsize="end"
                />

            <ImageView
                android:id="@+id/everyimage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/right_show_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:scaleType="centerCrop"
                />





        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>